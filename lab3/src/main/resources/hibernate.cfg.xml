<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

    <session-factory>
        <!-- Połączenie z bazą danych -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/okienka?useSSL=false&amp;serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>

        <!-- Ustawienia puli połączeń -->
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>

        <!-- Konfiguracja sesji -->
        <property name="hibernate.current_session_context_class">thread</property>

        <!-- Pokazuj zapytania SQL w logach -->
        <property name="hibernate.show_sql">true</property>

        <!-- Automatyczne zarządzanie schematem bazy danych -->
        <property name="hibernate.hbm2ddl.auto">create</property>

        <!-- Wyłączenie pamięci podręcznej drugiego poziomu -->
        <property name="hibernate.cache.use_second_level_cache">false</property>
        <property name="hibernate.cache.use_query_cache">false</property>

        <!-- Formatowanie zapytań SQL -->
        <property name="hibernate.format_sql">true</property>

        <mapping class="org.example.demo1.EntityPerson"/>

    </session-factory>

</hibernate-configuration>
