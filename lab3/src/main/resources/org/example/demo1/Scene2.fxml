<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox minHeight="700.0" minWidth="1200.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo1.Scene2Controller">
   <TableView fx:id="teacherTable" maxWidth="-Infinity" minWidth="600.0" prefHeight="523.0" prefWidth="1200.0">
      <columns>
         <TableColumn fx:id="teacherFirstName" prefWidth="190.0" text="Imię" />
         <TableColumn fx:id="teacherLastName" prefWidth="259.0" text="Nazwisko" />
         <TableColumn fx:id="teacherCondition" prefWidth="283.0" text="Stan" />
         <TableColumn fx:id="teacherBirthYear" prefWidth="267.0" text="Rok urodzenia" />
         <TableColumn fx:id="teacherSalary" prefWidth="198.0" text="Wynagrodzenie" />
      </columns>
   </TableView>
   <GridPane hgap="10" prefHeight="174.0" prefWidth="1200.0" vgap="10">
      <Label text="Imię:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
      <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

      <Label text="Nazwisko:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

      <Label text="Stan:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
      <ComboBox fx:id="conditionField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

      <Label text="Rok urodzenia:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
      <TextField fx:id="birthYearField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

      <Label text="Pensja:" GridPane.rowIndex="4" />
      <TextField fx:id="salaryField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Button fx:id="addButton" onAction="#addTeacher" prefHeight="25.0" prefWidth="80.0" text="Dodaj" GridPane.columnIndex="2" GridPane.rowIndex="4" />
      <Button fx:id="updateButton" onAction="#updateTeacher" prefHeight="25.0" prefWidth="80.0" text="Zatwierdź" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      <Button mnemonicParsing="false" onAction="#deleteSelectedTeacher" prefHeight="25.0" prefWidth="80.0" text="Usuń" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <TextField fx:id="searchTeacherField" GridPane.columnIndex="6" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Wyszukaj nauczyciela" GridPane.columnIndex="4" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
      <padding>
         <Insets left="10.0" top="10.0" />
      </padding>
   </GridPane>

   <!-- Przyciski -->
   <HBox alignment="CENTER" spacing="10" />
</VBox>
